<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kode Web" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/kode_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Web" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Web" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/nama_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Web" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Url" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/url_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Url Web" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pemilik Web" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/pemilik_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pemilik Web" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_insertdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
        <Button
           android:background="@color/cardview_dark_background"
            android:layout_weight="1"
            android:id="@+id/btntampildata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampil Data" />
        <Button
            android:background="@color/cardview_shadow_end_color"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:visibility="gone" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btnhapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:background="@color/cardview_shadow_start_color"
            android:text="Hapus"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>